@model Sunflower.ViewModels.InvoiceEditVM

@{
    ViewData["Title"] = "Manage Invoice Status";
}

<div class="row">
    <div class="col-md-8">

        <h4 class="mb-4 text-primary">Manage Status: Invoice #@Model.MaHd</h4>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="MaHd" />

            <fieldset disabled>
                <div class="mb-3">
                    <label class="control-label">Invoice ID</label>
                    <input asp-for="MaHd" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="HoTenNguoiDat" class="control-label">Customer Name</label>
                    <input asp-for="HoTenNguoiDat" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="NgayDat" class="control-label">Order Date</label>
                    <input asp-for="NgayDat" class="form-control" />
                </div>
            </fieldset>

            <hr class="my-4" />

            <h5 class="mb-3">Update Status</h5>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="MaTrangThai" class="control-label">Status</label>
                    <select asp-for="MaTrangThai" class="form-select" asp-items="ViewBag.TrangThaiList"></select>
                    <span asp-validation-for="MaTrangThai" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="GhiChu" class="control-label">Notes</label>
                    <textarea asp-for="GhiChu" class="form-control" rows="3"></textarea>
                </div>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary me-2">Back to List</a>
            </div>
        </form>
    </div>
</div>
