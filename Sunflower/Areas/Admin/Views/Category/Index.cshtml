@model IEnumerable<Sunflower.ViewModels.AdminCategoryVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Category</h1>

<p>
    <a asp-area="Admin" asp-controller="Category" asp-action="AddProduct" class="btn btn-primary">Create New</a>
</p>
<p>
    @TempData["Message"]
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Product ID
            </th>
            <th>
                Product Name
            </th>
            <th>
                Price
            </th>
            <th>
                Manufacture Date
            </th>
            <th>
                Discount
            </th>
            <th>
                Total view
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.MaHh
                </td>
                <td>
                    @item.TenHh
                </td>
                <td>
                    @item.DonGia
                </td>
                <td>
                    @item.NgaySx
                </td>
                <td>
                    @item.GiamGia
                </td>
                <td>
                    @item.SoLanXem
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="Category" asp-action="EditProduct" asp-route-ProductId="@item.MaHh">Edit</a> |
                    <a asp-area="Admin" asp-controller="Category" asp-action="DeleteProduct" asp-route-ProductId="@item.MaHh">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="btn-group me-2">
    @if (ViewBag.PageNumber > 1)
    {
        <a asp-area="Admin" asp-controller="Category" asp-action="Index" asp-route-Page="@(ViewBag.PageNumber - 1)" class="btn btn-primary">&laquo;</a>
    }

    @for (int i = 1; i <= ViewBag.TotalPages; i++)
    {
        <a asp-area="Admin" asp-controller="Category" asp-action="Index" asp-route-Page="@i" class="@(i == ViewBag.PageNumber ? "active" : "") btn btn-primary">@i</a>
    }

    @if (ViewBag.PageNumber < ViewBag.TotalPages)
    {
        <a asp-area="Admin" asp-controller="Category" asp-action="Index" asp-route-Page="@(ViewBag.PageNumber - 1)" class="btn btn-primary">&raquo;</a>
    }
</div>
