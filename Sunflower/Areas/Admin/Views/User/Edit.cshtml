@model Sunflower.ViewModels.AdminManageRolesVM

@{
    ViewData["Title"] = "Manage User Roles";
}

<div class="row">
    <div class="col-md-8">

        <h4 class="mb-4 text-primary">Manage Permissions: @Model.HoTen</h4>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="MaKh" />

            <fieldset disabled>
                <div class="mb-3">
                    <label asp-for="MaKh" class="control-label"></label>
                    <input asp-for="MaKh" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="HoTen" class="control-label"></label>
                    <input asp-for="HoTen" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
            </fieldset>

            <hr class="my-4" />

            <h5 class="mb-3">Set Permissions</h5>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="VaiTro" class="control-label"></label>
                    <select asp-for="VaiTro" class="form-select">
                        <option value="0">User</option>
                        <option value="1">Admin</option>
                    </select>
                    <span asp-validation-for="VaiTro" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3 d-flex align-items-center justify-content-start pt-3">
                    <div class="form-check form-switch fs-5">
                        <input class="form-check-input" type="checkbox" asp-for="HieuLuc" id="hieuLucSwitch" />
                        <label class="form-check-label" for="hieuLucSwitch">@Html.DisplayNameFor(model => model.HieuLuc)</label>
                    </div>
                </div>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary me-2">Back to List</a>
            </div>
        </form>
    </div>
</div>