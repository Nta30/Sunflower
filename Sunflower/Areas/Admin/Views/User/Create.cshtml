@model Sunflower.ViewModels.AdminCreateUserVM

@{
    ViewData["Title"] = "Create New User";
}

<div class="row">
    <div class="col-md-8">

        <h4 class="mb-4 text-primary">Create New User Account</h4>

        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="MaKh" class="control-label"></label>
                    <input asp-for="MaKh" class="form-control" placeholder="Enter username..." />
                    <span asp-validation-for="MaKh" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="MatKhau" class="control-label"></label>
                    <input asp-for="MatKhau" class="form-control" type="password" placeholder="Enter password..." />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="HoTen" class="control-label"></label>
                <input asp-for="HoTen" class="form-control" placeholder="Enter full name..." />
                <span asp-validation-for="HoTen" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="NgaySinh" class="control-label"></label>
                    <input asp-for="NgaySinh" class="form-control" type="date" />
                    <span asp-validation-for="NgaySinh" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="control-label">@Html.DisplayNameFor(model => model.GioiTinh)</label>
                    <div class="form-control border-0 px-0 bg-transparent">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="GioiTinh" value="true" id="gioiTinhMale" checked />
                            <label class="form-check-label" for="gioiTinhMale">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="GioiTinh" value="false" id="gioiTinhFemale" />
                            <label class="form-check-label" for="gioiTinhFemale">Female</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="example@email.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="DienThoai" class="control-label"></label>
                    <input asp-for="DienThoai" class="form-control" placeholder="09..." />
                    <span asp-validation-for="DienThoai" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="DiaChi" class="control-label"></label>
                <input asp-for="DiaChi" class="form-control" placeholder="123 Main St, Hanoi..." />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Hinh" class="control-label"></label>
                <input asp-for="Hinh" class="form-control" type="file" />
                <span asp-validation-for="Hinh" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="VaiTro" class="control-label"></label>
                    <select asp-for="VaiTro" class="form-select">
                        <option value="0">User</option>
                        <option value="1">Admin</option>
                    </select>
                    <span asp-validation-for="VaiTro" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3 d-flex align-items-center justify-content-start pt-3">
                    <div class="form-check form-switch fs-5">
                        <input class="form-check-input" type="checkbox" asp-for="HieuLuc" id="hieuLucSwitch" />
                        <label class="form-check-label" for="hieuLucSwitch">@Html.DisplayNameFor(model => model.HieuLuc)</label>
                    </div>
                </div>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary me-2">Back to List</a>
            </div>
        </form>
    </div>
</div>