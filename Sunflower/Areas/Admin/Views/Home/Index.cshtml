<div class="container py-5">
    <h1 class="mb-5 text-center text-primary fw-bold">
        🌻 Welcome to Admin Dashboard 🌻
    </h1>

    <div class="row g-4 justify-content-center">
        <!-- Categories -->
        <div class="col-md-4 col-lg-3">
            <div class="card shadow-sm border-0 h-100 text-center p-4 hover-shadow">
                <div class="mb-3 text-primary fs-1">
                    <i class="fas fa-boxes"></i>
                </div>
                <h5 class="card-title fw-bold mb-2">Manage Categories</h5>
                <p class="card-text text-muted mb-4">View, add, edit, and delete product categories</p>
                <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-outline-primary px-4">
                    Go
                </a>
            </div>
        </div>

        <!-- Invoices -->
        <div class="col-md-4 col-lg-3">
            <div class="card shadow-sm border-0 h-100 text-center p-4 hover-shadow">
                <div class="mb-3 text-success fs-1">
                    <i class="fas fa-file-invoice-dollar"></i>
                </div>
                <h5 class="card-title fw-bold mb-2">Manage Invoices</h5>
                <p class="card-text text-muted mb-4">View, edit, and track customer invoices</p>
                <a asp-area="Admin" asp-controller="Invoice" asp-action="Index" class="btn btn-outline-success px-4">
                    Go
                </a>
            </div>
        </div>

        <!-- Users -->
        <div class="col-md-4 col-lg-3">
            <div class="card shadow-sm border-0 h-100 text-center p-4 hover-shadow">
                <div class="mb-3 text-warning fs-1">
                    <i class="fas fa-users-cog"></i>
                </div>
                <h5 class="card-title fw-bold mb-2">Manage Users</h5>
                <p class="card-text text-muted mb-4">View and manage customer accounts</p>
                <a asp-area="Admin" asp-controller="Customer" asp-action="Index" class="btn btn-outline-warning px-4">
                    Go
                </a>
            </div>
        </div>
    </div>
</div>
