@model Sunflower.ViewModels.ProfileVM
@{
    ViewData["Title"] = "Profile";
}
<div style="min-height: 75px"></div>

<div class="container py-5 my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-0 rounded-4">
                <div class="card-body p-4 text-center">

                    <img src="~/img/Hinh/KhachHang/@Model.Hinh"
                         alt="Profile Image"
                         class="rounded-circle mb-3"
                         width="120" height="120"
                         style="object-fit: cover;"
                         onerror="this.src='~/images/avatar.jpg';">

                    <h4 class="mb-1">@Model.HoTen</h4>
                    <p class="text-muted">@Model.VaiTro</p>

                    <hr class="my-4" />

                    <div class="text-start">
                        <p><strong>Gender:</strong> @Model.GioiTinh</p>
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Date of Birth:</strong> @Model.NgaySinh</p>
                        <p><strong>Phone:</strong> @Model.DienThoai</p>
                        <p><strong>Address:</strong> @Model.DiaChi</p>
                    </div>

                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <a href="/Account/EditProfile" class="btn btn-primary px-4">Edit Profile</a>
                        <a asp-asp-controller="Account" asp-action="LogOut" class="btn btn-outline-danger px-4">Log out</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
