@model Sunflower.ViewModels.ProfileVM
@{
    ViewData["Title"] = "Profile";
}
<div style="min-height: 75px"></div>

<div class="container py-5 my-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow border-0 rounded-4">
                <div class="card-body p-4 p-md-5">

                    <div class="text-center mb-4">
                            <img src="~/img/Hinh/KhachHang/@Model.Hinh"
                             alt="Profile Image"
                             class="rounded-circle mb-3"
                             width="120" height="120"
                             style="object-fit: cover;"
                            onerror="this.src='/img/avatar.jpg';">
                        <h4 class="mb-1">@Model.HoTen</h4>
                        <p class="text-muted mb-0">@Model.VaiTro</p>
                    </div>

                    <hr class="my-4" />

                    <h5 class="mb-3">Profile Settings</h5>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label text-muted">Email</label>
                            <input type="email" class="form-control" value="@Model.Email" readonly />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label text-muted">Phone</label>
                            <input type="text" class="form-control" value="@Model.DienThoai" readonly />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label text-muted">Gender</label>
                            <input type="text" class="form-control" value="@Model.GioiTinh" readonly />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label text-muted">Date of Birth</label>
                            <input type="text" class="form-control" value="@Model.NgaySinh" readonly />
                        </div>

                        <div class="col-12">
                            <label class="form-label text-muted">Address</label>
                            <textarea class="form-control" rows="2" readonly>@Model.DiaChi</textarea>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center gap-3 mt-5">
                        <a href="/Account/EditProfile" class="btn btn-primary px-4 py-2 rounded-pill">Edit Profile</a>
                        <a asp-controller="Account" asp-action="LogOut" class="btn btn-outline-danger px-4 py-2 rounded-pill">Log out</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>