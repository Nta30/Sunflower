@model Sunflower.ViewModels.LoginVM
<div class="container-fluid py-5">
	<div class="container py-5">
		<h1 class="mb-4">Sign up</h1>
		<form asp-controller="Account" asp-action="SignIn" asp-route-returnUrl="@ViewBag.ReturnUrl" enctype="multipart/form-data">
			<div asp-validation-summary="All" class="text-danger mb-3"></div>
			<div class="row">
				<div class="row">
					<div class="col-md-12 col-lg-6">
						<div class="form-item w-100">
							<label asp-for="@Model.Username" class="form-label my-3"></label><sup>*</sup>
							<input asp-for="@Model.Username" class="form-control">
							<span asp-validation-for="@Model.Username" class="text-danger"></span>
						</div>
					</div>
					<div class="col-md-12 col-lg-6">
						<label asp-for="@Model.Password" class="form-label my-3"></label><sup>*</sup>
						<input asp-for="@Model.Password" class="form-control">
						<span asp-validation-for="@Model.Password" class="text-danger"></span>
					</div>
				</div>
				<div class="row g-4 text-center align-items-center justify-content-center pt-4">
					<button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Sign in</button>
					<p>Don't have account? <a asp-controller="Account" asp-action="SignUp">Sign up</a></p>
					<a asp-controller="Account" asp-action="ForgotPassword">Forgot password</a>
				</div>
			</div>
		</form>
	</div>
</div>

