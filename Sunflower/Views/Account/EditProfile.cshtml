@model Sunflower.ViewModels.EditProfileVM
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Edit Profile</h1>

        <form asp-controller="Account" asp-action="EditProfile" enctype="multipart/form-data">

            <input type="hidden" asp-for="MaKh" />

            <div class="row">
                <div class="col-md-8">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-item">
                        <label asp-for="HoTen" class="form-label my-3">Name</label>
                        <input asp-for="HoTen" class="form-control" />
                        <span asp-validation-for="HoTen" class="text-danger"></span>
                    </div>

                    <div class="form-item">
                        <label asp-for="Email" class="form-label my-3"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-item">
                        <label asp-for="DienThoai" class="form-label my-3">Phone Number</label>
                        <input asp-for="DienThoai" class="form-control" />
                        <span asp-validation-for="DienThoai" class="text-danger"></span>
                    </div>

                    <div class="form-item">
                        <label asp-for="DiaChi" class="form-label my-3">Address</label>
                        <input asp-for="DiaChi" class="form-control" />
                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                    </div>

                    <div class="form-item">
                        <label asp-for="NgaySinh" class="form-label my-3">Date Of Birth</label>
                        <input asp-for="NgaySinh" class="form-control" type="date" />
                        <span asp-validation-for="NgaySinh" class="text-danger"></span>
                    </div>

                    <div class="form-item my-3">
                        <label class="form-label my-3" asp-for="GioiTinh">Gender</label>
                        <div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="GioiTinh" value="true" id="GioiTinhNam" />
                                <label class="form-check-label" for="GioiTinhNam">Male</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="GioiTinh" value="false" id="GioiTinhNu" />
                                <label class="form-check-label" for="GioiTinhNu">Female</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-item">
                        <label asp-for="HinhMoi" class="form-label my-3">New Avatar (Leave blank if you don't want to change it)</label>
                        <input asp-for="HinhMoi" type="file" class="form-control" />
                    </div>
                </div>

                <div class="col-md-4 text-center">
                    <label>Ảnh hiện tại</label>
                    @if (string.IsNullOrEmpty(Model.HinhHienTai))
                    {
                        <img src="/images/avatar.jpg" class="img-fluid rounded-circle" style="width: 200px; height: 200px; object-fit: cover;" alt="Avatar mặc định">
                    }
                    else
                    {
                        <img src="~/img/Hinh/KhachHang/@Model.HinhHienTai"
                             class="img-fluid rounded-circle"
                             style="width: 200px; height: 200px; object-fit: cover;"
                             alt="Profile Image"
                             onerror="this.src='/images/avatar.jpg';">
                    }
                </div>
            </div>

            <div class="row g-4 text-center justify-content-center pt-4">
                <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Lưu thay đổi</button>
            </div>
        </form>
    </div>
</div>